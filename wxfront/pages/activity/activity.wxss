/* pages/activity/activity.wxss */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f8f8f8;
}

.activity-container {
  padding: 20px;
  display: grid;
  grid-template-columns: 1fr;
  gap: 20px;
  max-width: 400px;
  margin: 0 auto;
}

.activity {
  background-color: white;
  border-radius: 10px;
  padding: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  position: relative;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.activity image {
  width: 100px;
  height: 100px;
  border-radius: 15px;
  object-fit: cover;
  border: 2px solid #ccc;
}

.date {
  background-color: #f5f5f5;
  padding: 5px 10px;
  border-radius: 20px;
  font-size: 12px;
  display: inline-block;
}

.details {
  margin-top: 10px;
}

.category {
  background-color: #ffd700;
  padding: 2px 5px;
  border-radius: 5px;
  font-size: 12px;
  display: inline-block;
}

.desc {
  font-size: 14px;
  color: #555;
  line-height: 1.5;
}

.highlight {
  color: yellow;
}
.activity-container {
  padding: 20px;
}

button {
  margin-bottom: 20px;
}
.search-bar__form {
  -webkit-box-flex: 1;
  background: #eeeeef;
  border-radius: 40rpx; /* 使用 rpx 单位 */
  flex: auto;
  position: relative;
  margin-left: 20rpx; /* 左边距改为 rpx */
  margin-right: 20rpx; /* 右边距改为 rpx */
}
.search-bar__box {
  align-items: center;
  box-sizing: border-box;
  display: flex;
  flex-flow: row;
  padding-left: 40rpx; /* 左内边距改为 rpx */
  /* padding-right: 120rpx;  */
  position: relative;
  width: 100%;
  z-index: 1;
}
.search-bar__input {
  height: 100%;
  width: 100%;
  line-height: 100%;
  margin-left: 10rpx; /* 左边距改为 rpx */
}
