.filter-container {
  padding: 20px;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.filter-content {
  display: flex;
  flex-wrap: wrap;
  gap:20rpx 16rpx;
}

.filter-section {
  /* margin-bottom: 20px; */
  border: 2rpx solid;
  height: 54rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding:10rpx 18rpx;

  font-family: PingFang SC;
  font-size: 24rpx;
  font-weight: 400;
  text-align: center;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;
}

.filter-item {
  padding: 10px 20px;
  margin: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
  cursor: pointer;
}

.selected {
  background-color: #FFFDA3;
  color: black;
}

.calendar-placeholder {
  height: 300px;
  border: 1px solid #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
}
.title{
  width: 100%;
  font-family: PingFang SC;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  text-align: left;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;
  margin-bottom: 16rpx;
}
.margin-top{
  margin-top:16rpx
}